generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FileOwnerType {
  CASE
  CONTRACT
  CLIENT
  INVOICE
  MISC
}

model File {
  id         String    @id @default(uuid())
  name       String
  extension  String
  baseUrl    String
  folder     String
  file       String
  url        String    @unique
  size       Int
  contentType String?
  eTag       String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  links      FileLink[]
}

model FileLink {
  id           String       @id @default(uuid())
  fileId       String
  ownerType    FileOwnerType
  organizationId String?
  clientId     String?
  contractId   String?
  caseId       String?
  invoiceId    String?
  label        String?
  documentType String?
  createdAt    DateTime     @default(now())

  file         File         @relation(fields: [fileId], references: [id], onDelete: Cascade)
}

enum UserRole {
  ADMIN
  ADVOGADO
  ESTAGIARIO
  FINANCEIRO
  CLIENTE
}

enum AccountStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum PersonType {
  PF
  PJ
}

model User {
  id             String        @id @default(uuid())
  firebaseUid    String        @unique
  fullName       String
  email          String        @unique
  phone          String?
  cpf            String?       @unique
  oab            String?       @unique
  profileFileId  String?
  profileFile    File?         @relation(fields: [profileFileId], references: [id], onDelete: SetNull)
  mfaEnabled     Boolean       @default(false)
  lastLogin      DateTime?
  failedAttempts Int           @default(0)
  accountStatus  AccountStatus @default(ACTIVE)
  role           UserRole      @default(CLIENTE)
  department     String?
  unit           String?
  supervisorId   String?
  supervisor     User?         @relation("UserSupervisor", fields: [supervisorId], references: [id])
  subordinates   User[]        @relation("UserSupervisor")
  consentLgpd    Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  responsibleContracts ContractResponsible[]
}

model Client {
  id             String   @id @default(uuid())
  organizationId String
  personType     PersonType
  fullName       String?
  companyName    String?
  cpf            String?   @unique
  cnpj           String?   @unique
  email          String?
  phone          String?
  website        String?
  notes          String?

  logoFileId     String?
  logoFile       File?     @relation(fields: [logoFileId], references: [id], onDelete: SetNull)

  docMainFileId  String?
  docMainFile    File?     @relation(fields: [docMainFileId], references: [id], onDelete: SetNull)

  contracts      Contract[]

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Contract {
  id             String   @id @default(uuid())
  title          String
  organizationId String
  clientId       String?
  client         Client?  @relation(fields: [clientId], references: [id], onDelete: SetNull)
  fileId         String?
  file           File?    @relation(fields: [fileId], references: [id], onDelete: SetNull)

  responsibleUsers ContractResponsible[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ContractResponsible {
  contractId String
  userId     String
  contract   Contract @relation(fields: [contractId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([contractId, userId])
}
